{% extends "base.html.twig" %}

{% block title %}Liste des Cours{% endblock %}

{% block content %}
    <h2 class="text-2xl font-bold mb-4">Liste des Cours</h2>
    <table class="min-w-full bg-white border border-gray-200 shadow-sm rounded-lg">
        <thead>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border">ID</th>
                <th class="px-4 py-2 border">Module</th>
                <th class="px-4 py-2 border">Niveau</th>
                <th class="px-4 py-2 border">Professeur</th>
            </tr>
        </thead>
        <tbody>
            {% for cour in cours %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 border">{{ cour.id }}</td>
                    <td class="px-4 py-2 border">{{ cour.module }}</td>
                    <td class="px-4 py-2 border">{{ cour.niveau.nom }}</td>
                    <td class="px-4 py-2 border">
                        {{ cour.professeur ? cour.professeur.nom ~ ' ' ~ cour.professeur.prenom : 'Aucun' }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-4 py-2 border text-center text-gray-500">Aucun cours trouv√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
