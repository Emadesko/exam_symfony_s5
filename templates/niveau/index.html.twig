{% extends "base.html.twig" %}

{% block title %}Liste des Niveaux{% endblock %}

{% block content %}
    <h2 class="text-2xl font-bold mb-4">Liste des Niveaux</h2>
    <ul class="space-y-4">
        {% for niveau in niveaux %}
            <li class="p-4 bg-white shadow-sm rounded-lg border">
                <h3 class="text-lg font-bold text-blue-600">{{ niveau.nom }}</h3>
                <ul class="mt-2 space-y-2">
                    {% for cours in niveau.cours %}
                        <li class="pl-4 border-l-2 border-blue-400">{{ cours.module }}</li>
                    {% else %}
                        <li class="text-gray-500">Aucun cours pour ce niveau.</li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li class="text-gray-500">Aucun niveau trouv√©.</li>
        {% endfor %}
    </ul>
{% endblock %}
